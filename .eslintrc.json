{
  "root": true,
  "extends": ["@illandril/eslint-config-foundryvtt"],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "ignorePatterns": [
    "/.history",
    "/coverage",
    "/module",
    "/dist",
    "/node_modules"
  ],
  "globals": {
    "game": "readonly",
    "Hooks": "readonly"
  },
  "overrides": [
    {
      "files": ["rollup.config.js"],
      "globals": {
        "process": "readonly"
      }
    }
  ]
}